//a function to check the validity of a date(emphasis on the day)
function checkValidDate(day,month){
    let valid="true";
    //using switch statement
    switch(month){
        case 1:
        case 3:
        case 5:
        case 7:
        case 8:
        case 10:
        case 12:
            if(day>31){
                valid="false";
            }
            break;
        case 2:
            //February day is assumed to be 28 days
            if(day>28){
                valid="false";
            }
            break;
        case 4:
        case 6:
        case 9:
        case 11:
            if(day>30){
                valid="false";
            }
            break;
                
    }
    return valid;
}

console.log(checkValidDate(30,2));